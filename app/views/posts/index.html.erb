
<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<table class = "table table-striped table-bordered table-hover">
  <thead class="table-dark">
  <tr>
    <th>Blog Title</th>
    <th>Show</th>

  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= link_to "Show this post", post, class:'btn btn-info' %></td>

    </tr>
  <% end %>
  </tbody>

</table>




<%= link_to "Add New Blog", new_post_path, class: "btn btn-primary"%>
