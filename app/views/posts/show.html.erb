


<div class="mt-4 p-5 bg-light text-black rounded">
  <h1 class="display-4" style="color:cadetblue;">
    <%= @post.title %>
  </h1>
  <p class="lead"><%= @post.description %>
  </p>
  <hr class="my-4">
  <%= link_to "Back", posts_path, class:"btn btn-primary"%>
  <br/>
  <br/>
  <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-secondary"%>
  <br/>
  <br/>
  <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger"%>
  <br/>
  <br/>
</div>
